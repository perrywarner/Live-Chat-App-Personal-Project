{
    "name": "live_chat_app",
    "version": "1.0.0",
    "private": true,
    "description": "Perry's playground application for building the server for a live chat web app",
    "main": "app.ts",
    "scripts": {
        "start": "ts-node ./bin/www.ts --input-type=module",
        "start:dev": "ts-node-dev  ./bin/www.ts --input-type=module",
        "start-ui": "cd client-side && yarn start",
        "test": "jest",
        "test:users": "curl http://localhost:3001/users",
        "compile": "tsc",
        "format": "yarn prettier --write .",
        "format-check": "yarn prettier --check ."
    },
    "engines": {
        "node": ">=16.14.0"
    },
    "repository": "git+https://github.com/perrywarner/Live-Chat-App-Personal-Project.git",
    "keywords": [
        "Node",
        "Express",
        "React",
        "TypeScript",
        "Live",
        "Chat",
        "Yarn"
    ],
    "author": "Perry Warner",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/perrywarner/Live-Chat-App-Personal-Project/issues"
    },
    "homepage": "https://github.com/perrywarner/Live-Chat-App-Personal-Project#readme",
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.13",
        "@types/http-errors": "^1.8.2",
        "@types/jest": "^28.1.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "^12.20.55",
        "create-react-app": "^2.1.8",
        "express-generator": "^4.16.0",
        "jest": "^28.1.1",
        "prettier": "2.6.2",
        "react-scripts": "^2.1.8",
        "ts-jest": "^28.0.5",
        "ts-node": "10.8.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "4.7.2"
    },
    "dependencies": {
        "cookie-parser": "^1.4.4",
        "debug": "^4.1.1",
        "express": "^4.16.4",
        "http-errors": "^1.7.2",
        "jade": "^1.11.0",
        "morgan": "^1.9.1",
        "pug": "^2.0.3"
    }
}
