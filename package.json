{
    "name": "live_chat_app",
    "version": "1.0.0",
    "private": true,
    "description": "Perry's playground application for building the server for a live chat web app",
    "main": "app.ts",
    "scripts": {
        "start": "ts-node ./bin/www.ts --input-type=module",
        "start:dev": "ts-node-dev  ./bin/www.ts --input-type=module",
        "start-ui": "cd client-side && yarn start",
        "test": "jest",
        "test:users": "curl http://localhost:3001/users",
        "compile": "tsc",
        "format": "yarn prettier --write .",
        "format-check": "yarn prettier --check .",
        "connect-to-ec2": "bash ./scripts/ssh_to_ec2.sh"
    },
    "engines": {
        "node": ">=16.14.0"
    },
    "repository": "git+https://github.com/perrywarner/Live-Chat-App-Personal-Project.git",
    "keywords": [
        "Node",
        "Express",
        "React",
        "TypeScript",
        "Live",
        "Chat",
        "Yarn"
    ],
    "author": "Perry Warner",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/perrywarner/Live-Chat-App-Personal-Project/issues"
    },
    "homepage": "https://github.com/perrywarner/Live-Chat-App-Personal-Project#readme",
    "devDependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/debug": "^4.1.12",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.14.9",
        "@types/pg": "^8.11.6",
        "create-react-app": "^5.0.1",
        "dotenv": "^16.4.5",
        "jest": "^29.7.0",
        "prettier": "3.3.2",
        "prisma": "^5.16.1",
        "react-scripts": "^5.0.1",
        "ts-jest": "^29.1.5",
        "ts-node": "10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "5.5.3"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^5.16.1",
        "@prisma/client": "^5.16.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.5",
        "express": "^4.19.2",
        "http-errors": "^2.0.0",
        "jade": "^1.11.0",
        "morgan": "^1.10.0",
        "pg": "^8.12.0",
        "pug": "^3.0.3",
        "sequelize": "^6.37.3"
    }
